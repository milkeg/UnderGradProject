<?xml version="1.0" encoding="UTF-8"?>
<faces-config
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
  version="2.0">

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <from-outcome>book</from-outcome>
      <to-view-id>/book.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>category</from-outcome>
      <to-view-id>/category.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>panier</from-outcome>
      <to-view-id>/panier.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>login</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>register</from-outcome>
      <to-view-id>/register.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>client</from-outcome>
      <to-view-id>/client.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>logout</from-outcome>
      <to-view-id>/welcome.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/login.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/client.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/register.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/login.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/client.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/orders.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/orders.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>order</from-outcome>
      <to-view-id>/order.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/book.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>success</from-outcome>
      <to-view-id>/book.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
 
  <application>
     <locale-config>
        <default-locale>fr</default-locale>
        <supported-locale>en</supported-locale>
    </locale-config>
    <resource-bundle>
      <base-name>resources.strings</base-name>
      <var>strings</var>
    </resource-bundle>
    <message-bundle>resources.messages</message-bundle>
  </application>
</faces-config>
